<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_news_item"
        android:background="#2A000000"
        android:padding="16dp"
        android:layout_margin="8dp">

    <TextView
            android:text="New's Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_news_title"
            android:textSize="24sp"
            android:textStyle="bold"/>

    <TextView
            android:text="00/00/00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_news_date"
            android:padding="8dp"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@android:color/background_dark"
            android:id="@+id/image_view_news_item"
            android:scaleType="centerCrop"/>

    <TextView
            android:text="description of newsItemBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_news_description"
            android:padding="8dp"/>

</LinearLayout>